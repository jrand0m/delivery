# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~
# Home page

GET     /                                       controllers.Application.index()

GET     /index.php                              controllers.Application.index()
GET     /order/index.php                        controllers.Application.order(id :Long)
GET     /order/checkout.php                     controllers.Application.checkout(id :Long)
GET     /order/checkAndSend.php                 controllers.Application.checkAndSend(id: Long, aid: Long, name: String, city: Integer, sname: String, streetid: Long, street: String, email: String, app: String, phone: String, oplata: String, addinfo: String)
GET     /order/add.php                          controllers.Application.addOrderItem(id:Long, component: String)
GET     /order/cng.php                          controllers.Application.cngOrderItem(id :Long, count:Integer)
GET     /order/list.php                         controllers.Application.basket(chart: Long)
GET     /show/restaurants.php                   controllers.Application.showRestaurants()
GET     /show/menu.php                          controllers.Application.showMenu(id: Long)
GET     /show/last.php                          controllers.Application.getLastOrders(top: Boolean)
GET     /show/comp.php                          controllers.Application.comps(id: Long)
GET     /change/lang.php                        controllers.Application.changeLng(lang: String)
GET     /change/city.php                        controllers.Application.changeCity(id: Long)
GET     /serve/logo.php                         controllers.Application.serveLogo(id: Long)

# Add these as soon as registration will be possible :)
# newUser()
# registerNewUser(EndUser)


# Map static resources from the /app/public folder to the /public path
GET     /public/*file                           controllers.Assets.at(path="/public", file)
GET     /img/*file                              controllers.Assets.at(path="/public/images", file)
#favicon requests
#GET     /favicon.ico                           staticFile:/public/images/favicon.ico


##############################
######## Security ############
##############################

GET         /login.php                          controllers.Security.login()
POST        /login.php                          controllers.Security.authenticate(username: String, password: String, remember: Boolean)
GET         /logout.php                         controllers.Security.logout()

##############################
####### Static ###############
##############################

GET         /about.php                          controllers.Static.about()
GET         /rules.php                          controllers.Static.rules()
GET         /forRestaurants.php                 controllers.Static.forRestaurants()
GET         /contacts.php                       controllers.Static.contacts()

