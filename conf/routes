# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~
# Home page
GET     /                                       controllers.Application.index()
GET     /index.php                              controllers.Application.index()
GET     /order/index.php                        controllers.Application.order()
GET     /order/checkout.php                     controllers.Application.checkout()
GET     /order/checkAndSend.php                 controllers.Application.checkAndSend()
GET     /order/add.php                          controllers.Application.addOrderItem()
GET     /order/cng.php                          controllers.Application.cngOrderItem()
GET     /order/list.php                         controllers.Application.basket()
GET     /show/restaurants.php                   controllers.Application.showRestaurants()
GET     /show/menu.php                          controllers.Application.showMenu()
GET     /show/last.php                          controllers.Application.getLastOrders()
GET     /show/comp.php                          controllers.Application.comps()
GET     /change/lang.php                        controllers.Application.changeLang()
GET     /change/city.php                        controllers.Application.changeCity()
GET     /serve/logo.php                         controllers.Application.serveLogo()

# Add these as soon as registration will be possible :)
# newUser()
# registerNewUser(EndUser)


# Map static resources from the /app/public folder to the /public path
GET     /public/*file                           controllers.Assets.at(path="/public", file)
GET     /img/*file                              controllers.Assets.at(path="/public/images", file)
#favicon requests
#GET     /favicon.ico                           staticFile:/public/images/favicon.ico


##############################
######## Security ############
##############################

GET         /login.php                          controllers.Secure.login()
POST        /login.php                          controllers.Secure.authenticate(username: java.lang.String, password: java.lang.String, remember: Boolean)
GET         /logout.php                         controllers.Secure.logout()
GET         /about.php                          controllers.Static.about()
GET         /rules.php                          controllers.Static.rules()
GET         /forRestaurants.php                 controllers.Static.forRestaurants()
GET         /contacts.php                       controllers.Static.contacts()

